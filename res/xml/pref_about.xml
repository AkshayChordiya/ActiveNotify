            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://plus.google.com/u/0/communities/111162882811320730230" />
        </Preference>
    </com.aky.peek.notification.PrefCategory>
    
    <com.aky.peek.notification.PrefCategory
        android:title="@string/category_reset">
        <Preference
            android:key="reset_setting"
            android:icon="@android:drawable/ic_menu_recent_history"
            android:title="@string/reset_setting_title"
            android:summary="@string/reset_setting_summary"/>
