         	android:fragment="com.aky.peek.notification.SettingsActivity$Credits"
         	android:key="credit"
         	android:title="@string/credits_title"
        	 android:summary="@string/credits_summary"/>
    </com.aky.peek.notification.PrefCategory>
    
    <com.aky.peek.notification.PrefCategory
        android:title="@string/category_dialog">
        <Preference
            android:key="changelog"
            android:title="@string/about_changelog_title"
            android:summary="@string/about_changelog_summary"/>
        <Preference
            android:key="plannedlog"
            android:title="@string/about_plan_title"
            android:summary="@string/about_plan_summary"/>
        <Preference
            android:key="faq_dialog"
            android:title="@string/faq_dialog_title"
            android:summary="@string/faq_dialog_summary"/>
    </com.aky.peek.notification.PrefCategory>
    
    <com.aky.peek.notification.PrefCategory
        android:title="@string/category_contact">
        <Preference
            android:key="email_support"
            android:icon="@drawable/ic_action_chat"
            android:title="@string/email_title"
            android:summary="@string/email_summary"/>
