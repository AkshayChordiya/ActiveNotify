<!-- This is a primitive example showing the different types of preferences available. -->

<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android">
        
    <header
        android:fragment="com.aky.peek.notification.SettingsActivity$Basic"
        android:title="@string/general_title"
        android:summary="@string/general_summary"
        android:icon="@drawable/ic_storage"/>
    
    <header
        android:fragment="com.aky.peek.notification.SettingsActivity$Cosmetic"
        android:title="@string/cosmetic_panel_title"
        android:summary="@string/cosmetic_panel_summary"
        android:icon="@android:drawable/ic_menu_view"/>
    
    <header
        android:fragment="com.aky.peek.notification.SettingsActivity$Advance"
        android:title="@string/advance_panel_title"
        android:summary="@string/advance_panel_summary"
        android:icon="@android:drawable/ic_menu_add"/>
    
    <header
        android:fragment="com.aky.peek.notification.SettingsActivity$About"
        android:title="@string/about_panel_title"
        android:summary="@string/about_panel_summary"
        android:icon="@android:drawable/ic_menu_info_details"/>
    
    <header
         android:title="@string/like_app_title"
         android:summary="@string/like_app_summary"
         android:icon="@android:drawable/btn_star_big_on">
      <intent
             android:action="android.intent.action.VIEW"
             android:data="https://play.google.com/store/apps/details?id=com.aky.peek.notification" />
      </header>
    
</preference-headers>

